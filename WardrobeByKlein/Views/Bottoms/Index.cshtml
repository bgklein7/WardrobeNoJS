<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/StyleSheetBottoms.css" rel="stylesheet" />
@model IEnumerable<WardrobeByKlein.Models.Bottom>

@{
    ViewBag.Title = "Index";
}
<h2 id="indexPageTitle">Bottoms</h2>

<p id="createNewLink">@Html.ActionLink("Create New", "Create")</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="thumbnail">
                <div class="row subrow">
                    <div class="col-md-6 subcol">
                        <img id="itemIndexPic" src="@Html.DisplayFor(modelItem => item.BottomPhoto)" />
                    </div>
                    <div class="col-md-6 subcol">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => item.BottomName)</h3>
                            <p> <em>@Html.DisplayNameFor(model => model.BottomType)</em> :  @Html.DisplayFor(modelItem => item.BottomType)</p>
                            <p> <em>@Html.DisplayNameFor(model => model.BottomColor)</em> :  @Html.DisplayFor(modelItem => item.BottomColor)</p>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.BottomID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

