<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/StyleSheetShoes.css" rel="stylesheet" />
@model IEnumerable<WardrobeByKlein.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2 id="indexPageTitle">Shoes</h2>

<p id="createNewLink">@Html.ActionLink("Create New", "Create")</p>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-sm-6">
        <div class="thumbnail">
            <div class="row subrow">
                <div class="col-md-6 subcol">
                    <img id="itemIndexPic" src="@Html.DisplayFor(modelItem => item.ShoePhoto)" />
                </div>
                <div class="col-md-6 subcol">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.ShoeName)</h3>
                        <p> <em>@Html.DisplayNameFor(model => model.ShoeType)</em> :  @Html.DisplayFor(modelItem => item.ShoeType)</p>
                        <p> <em>@Html.DisplayNameFor(model => model.ShoeColor)</em> :  @Html.DisplayFor(modelItem => item.ShoeColor)</p>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ShoeID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ShoeID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ShoeID })
                        </p>
                    </div>
                </div>
                </div>
        </div>
    </div>
     }
</div>








        